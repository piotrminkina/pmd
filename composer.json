{
    "name": "piotrminkina/pmd",
    "license": "MIT",
    "type": "library",
    "description": "A set of customizable Symfony2 bundles to rapidly develop web applications",
    "authors": [
        {
            "name": "Piotr Minkina",
            "email": "projekty@piotrminkina.pl",
            "homepage": "http://www.piotrminkina.pl"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "~2.5",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "sensio/framework-extra-bundle": "~3.0"
    },
    "replace": {
        "piotrminkina/doctrine-bundle": "self.version",
        "piotrminkina/frontend-bundle": "self.version",
        "piotrminkina/resource-resolver-bundle": "self.version",
        "piotrminkina/routing-bundle": "self.version",
        "piotrminkina/state-machine-bundle": "self.version",
        "piotrminkina/workflow-bundle": "self.version"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-0": { "PMD\\": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
