{% extends _layout|default('@PMDFrontend/Layout/none.html.twig') %}
{% use '@PMDFrontend/blocks.html.twig' %}

{% set block_vars = _block_vars|default({}) %}

{% set _block = block_vars._block|default() %}
{% set _block_vars = block_vars._block_vars|default() %}

{% set block_tag = block_vars.tag|default('section') %}
{% set block_attrs = block_vars.attrs|default({}) %}
{% set block_body = block('body')|trim %}

{% block layout_body %}
    {{ block('block') }}
{% endblock %}

{% block block %}
    {% set attrs = block_attrs %}
    {% set class = 'block' %}

    <{{ block_tag }}{{ block('html_attrs') }}>
        {% block block_content %}
            {% block block_body %}
                {% block block_body_content %}
                    {{ block_body|raw }}
                {% endblock %}
            {% endblock %}
        {% endblock %}
    </{{ block_tag }}>
{% endblock %}
