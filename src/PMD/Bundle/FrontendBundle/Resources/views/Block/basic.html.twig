{% use 'PMDFrontendBundle::blocks.html.twig' %}
{% spaceless %}

{% set block_tag = block_tag|default('section') %}
{% set block_attrs = block_attrs|default({}) %}

{% set _block_body = block('body')|trim %}

{% endspaceless %}
{% block _block %}
    {% set attrs = block_attrs %}
    {% set class = 'block' %}

    <{{ block_tag }}{{ block('html_attrs') }}>
        {% block _block_content %}
            {% block _block_body %}
                {% block _block_body_content %}
                    {{ _block_body|raw }}
                {% endblock %}
            {% endblock %}
        {% endblock %}
    </{{ block_tag }}>
{% endblock %}
