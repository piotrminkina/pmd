{% extends '@PMDFrontend/Block/_base.html.twig' %}

{% import '@PMDFrontend/macros.html.twig' as macro %}


{% block block %}
    {%- set block = {
        body: block('body'),
    } + block + {
        tag: 'div',
        class: 'block',
        attrs: {},
    } -%}

    <{{ block.tag }}{{ macro.tag_attrs(block.attrs, block.class) }}>
        {{ parent() }}
    </{{ block.tag }}>
{% endblock %}

{% block block_body_content %}
    {{ block.body|raw }}
{% endblock %}
