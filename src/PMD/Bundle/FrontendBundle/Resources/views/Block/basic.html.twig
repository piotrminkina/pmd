{% extends '@PMDFrontend/Block/_base.html.twig' %}

{% import '@PMDFrontend/macros.html.twig' as macro %}


{% set block_vars = _block_vars|default({}) %}

{% set _block = block_vars._block|default() %}
{% set _block_vars = block_vars._block_vars|default() %}

{% block block %}
    {% set block_tag = block_vars.tag|default('div') %}
    {% set block_class = block_vars.class|default('block') %}
    {% set block_attrs = block_vars.attrs|default({}) %}
    {% set block_body = block('body')|trim %}

    <{{ block_tag }}{{ macro.tag_attrs(block_attrs, block_class) }}>
        {{ parent() }}
    </{{ block_tag }}>
{% endblock %}

{% block block_content %}
    {{ block('block_body') }}
{% endblock %}

{% block block_body %}
    {{ block('block_body_content') }}
{% endblock %}

{% block block_body_content %}
    {{ block_body|raw }}
{% endblock %}
