{% block html_attrs %}
    {%- set class = class|default('') -%}

    {%- if class -%}
        {%- set attrs = attrs|merge({
            class: (class ~ ' ' ~ attrs.class|default(''))|trim
        }) -%}
    {%- endif -%}

    {%- for attrname, attrvalue in attrs -%}
        {{- " " -}}
        {{- attrname }}="{{ attrvalue }}"
    {%- endfor -%}
{% endblock html_attrs %}
