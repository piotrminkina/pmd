<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    {% block document_metadata %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    {% endblock %}
    <title>{% block document_title '' %}</title>
    {% block document_links %}
        <link type="image/x-icon" rel="icon" href="{{ asset('favicon.ico') }}">
    {% endblock %}
    {% block document_javascripts %}{% endblock %}
    {% block document_stylesheets %}{% endblock %}
</head>
<body>
    {% block document_body %}{% endblock %}
</body>
</html>
