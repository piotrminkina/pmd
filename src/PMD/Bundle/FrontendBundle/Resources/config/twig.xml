<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pmd_frontend.twig.pmd_frontend_extension.class">PMD\FrontendBundle\Twig\PMDFrontendExtension</parameter>
    </parameters>

    <services>
        <service id="pmd_frontend.twig.pmd_frontend_extension"
                 class="%pmd_frontend.twig.pmd_frontend_extension.class%">
            <tag name="twig.extension" />
            <argument type="service"
                      id="pmd_frontend.templating.frontend_variables" />
        </service>
    </services>

</container>
