<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pmd_frontend.event_listener.view_listener.class">PMD\FrontendBundle\EventListener\ViewListener</parameter>
    </parameters>

    <services>
        <service id="pmd_frontend.event_listener.view_listener"
                 class="%pmd_frontend.event_listener.view_listener.class%">
            <argument type="service"
                      id="templating" />
            <argument type="service"
                      id="pmd_frontend.templating.frontend_variables" />
            <argument type="service"
                      id="sensio_framework_extra.view.guesser" />
        </service>
    </services>

</container>
