<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pmd_frontend.event_listener.template_listener.class">PMD\FrontendBundle\EventListener\TemplateListener</parameter>
        <parameter key="pmd_frontend.event_listener.layout_listener.class">PMD\FrontendBundle\EventListener\LayoutListener</parameter>
        <parameter key="pmd_frontend.event_listener.block_listener.class">PMD\FrontendBundle\EventListener\BlockListener</parameter>
    </parameters>

    <services>
        <service id="pmd_frontend.event_listener.template_listener"
                 class="%pmd_frontend.event_listener.template_listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service"
                      id="sensio_framework_extra.view.guesser" />
        </service>
        
        <service id="pmd_frontend.event_listener.layout_listener"
                 class="%pmd_frontend.event_listener.layout_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="pmd_frontend.event_listener.block_listener"
                 class="%pmd_frontend.event_listener.block_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>

</container>
